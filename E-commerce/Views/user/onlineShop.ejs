<%- include('../Includes/head.ejs') %>
    </head>

    <body>

        <%- include('../Includes/navigation.ejs') %>

            <main>
                <% if (prods.length> 0) { %>
                    <section>

                        <!--Grid row-->
                        <div class="row d-flex justify-content-center">
                            <!--Grid column-->
                            <div class="col-lg-8">
                                <h5 class="mb-4  d-flex justify-content-center">Cart (<span>
                                        <%= prods.length %>
                                    </span> items)</h5>
                                <% for (let product of prods) { %>

                                    <div class="card wish-list mb-3">
                                        <div class="card-body">
                                            <div class="row mb-4">
                                                <div class="col-md-5 col-lg-3 col-xl-3">
                                                    <div class="img-fluid img-thumbnail">
                                                        <img class="img-fluid w-100" src="<%= product.image %>"
                                                            alt="<%= product.title %>">
                                                    </div>
                                                </div>
                                                <div class="col-md-7 col-lg-9 col-xl-9">
                                                    <div>
                                                        <div class="d-flex justify-content-between">
                                                            <div>
                                                                <h5>
                                                                    <%= product.title %>
                                                                </h5>
                                                                <p class="mb-3 text-muted text-uppercase small">
                                                                    <%= product.category %>
                                                                </p>

                                                                <p class="mb-3 text-muted text-uppercase small">
                                                                    <%= product.description %>
                                                                </p>
                                                            </div>
                                                        </div>
                                                        <div class="d-flex justify-content-between align-items-center"
                                                            style="margin-bottom: auto;">
                                                            <div>
                                                               <form method="POST" action="/addToCard">
                                                                <button
                                                                  type="submit" class="btn btn-link""><i
                                                                        class="fas fa-heart mr-1"></i> Move to wish list
                                                                        <input type="hidden" value="<%= product.id %>" name="productId">
                                                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                                    </button>
                                                                </form>
                                                            </div>
                                                            <p class="mb-0"><span><strong>$17.99</strong></span></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr class="mb-4">
                                        </div>
                                    </div>

                                    <% } %>
                            </div>
                        </div>

                        <% } else { %>
                            <h1> Not Product</h1>

                            <% } %>


                    </section>
            </main>
            <%- include('../Includes/end.ejs') %>