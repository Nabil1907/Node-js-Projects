<%- include('../Includes/head.ejs') %> 
</head>
<body>

<%- include('../Includes/navigation.ejs') %> 

    <main>
        <% if (prods.length > 0) { %> 
            <div class="row">
            <% prods.forEach(p=> { %> 
                
                    <div class="col-sm-3">
                        <div class="card" style="width: 18rem; margin-bottom: 5px;" >
                            <div class="card-body">
                                <h5 class="card-title"><%= p.title %></h5>
                                <h5 class="card-title"> Quntity :  <%= p.quantity %> </h5>
                                <h6 class="card-price">Price : <%=  p.price %>$ </h6>
                                <p class="card-text"><%=  p.desc %></p>
                    
                                    <form action="/delete-cart/<%=  p._id %>" method="POST">
                                        <button type="submit" class="btn btn-primary">
                                          Delete
                                            </button>
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                    </form>

                            </div>
                         </div>
                    </div>
                    <div> 
                        <!-- <form action="/create-order" method="POST">
                            <button type="submit"> Order Now ! </button> 
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                        </form> -->
                        <a class="btn" href="/checkout"> Order Now</a>
                    </div>
                
            <% });  %>
        </div>
        
        <%  }  else { %>
            <h1> Not Product</h1>
            <% } %>

      

    </main>
<%- include('../Includes/end.ejs') %> 
