<%- include('../Includes/head.ejs') %>
    </head>

    <body>

        <%- include('../Includes/navigation.ejs') %>

            <main>
                <% if (carts.length> 0) { %>
                    <div class="row d-flex justify-content-center">
                        <% carts.forEach(p=> { %>
                            <!-- Card -->
                            <div class="mb-3">
                                <div class="pt-4">

                                    <h5 class="mb-3">The total amount of <%=p.productId.title %></h5>

                                    <ul class="list-group list-group-flush">
                                        <li
                                            class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                            Temporary amount
                                            <span>$<%= p.productId.price%></span>
                                        </li>
                                        <li
                                            class="list-group-item d-flex justify-content-between align-items-center px-0">
                                            Shipping
                                            <span>Gratis</span>
                                        </li>
                                        <li
                                            class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                            <div>
                                                <strong>The total amount of</strong>
                                                <strong>
                                                    <p class="mb-0">(<%=p.productId.title %>)</p>
                                                </strong>
                                            </div>
                                            <span><strong>$<%= p.quantity*p.productId.price %></strong></span>
                                        </li>
                                    </ul>

                                    <a class="btn btn-primary btn-block" href="/checkout">go to checkout</a>

                                </div>
                            </div>
                            <!-- <form action="/create-order" method="POST">
                            <button type="submit"> Order Now ! </button> 
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                        </form> -->
                
                    <% }); %>
                        </div>

                        <% } else { %>
                            <h1> Not Product</h1>
                            <% } %>



            </main>
            <%- include('../Includes/end.ejs') %>