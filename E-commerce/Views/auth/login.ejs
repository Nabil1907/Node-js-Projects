<%- include('../Includes/head.ejs') %>
<link rel="stylesheet" href="/css/Auth/login.css"> 
  </head> 
  <body>

   

        <div id="card">
          <div id="card-content">
            <div id="card-title">
              <h2>LOGIN</h2>
              <div class="underline-title"></div>
            </div>
            <form action="/login" method="POST" class="form">
              <label for="user-email" style="padding-top:13px">
                &nbsp;Email
              </label>
              <input type="email" id="user-email" class="form-content" aria-describedby="emailHelp" name="email">

              <div class="form-border"></div>
              <label for="user-password" style="padding-top:22px">&nbsp;Password
              </label>
              <input type="password"  class="form-content" id="user-password" name="password">
              <input id="user-password" class="form-content" type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="form-border"></div>
              <a href="/signup">
                <legend id="have-acc">Not Have Account?</legend>
              </a>
             
              <input id="submit-btn" type="submit" name="submit" value="LOGIN" />
            </form>
          </div>

          <% if(errorMessage){ %>
            <div class="alert alert-danger">
              <div>
                <%= errorMessage %>
              </div>
            </div>
            <% } %>
        </div>
        <%- include('../Includes/end.ejs') %>