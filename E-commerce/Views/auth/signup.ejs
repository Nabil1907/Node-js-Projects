<body>

<%- include('../Includes/navigation.ejs') %> 
<% if(errorMessage){ %> 
  <div class="alert alert-danger">
    <div><%= errorMessage %> </div>
  </div>
  <% } %>
  
<form style="width: 500px;margin-left: 500px;margin-top: 50px;" action="/signup" method="POST" novalidate>
    <div class="form-group" >
      <label for="exampleInputEmail1">Email address</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" value="<%= oldInput.email %>">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1" name="password" value="<%= oldInput.password %>">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Confirm Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" name="confirmPassword" value="<%= oldInput.confirmPassword  %>">
      </div>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <button type="submit" class="btn btn-primary">SignUp</button>

  </form>
<%- include('../Includes/end.ejs') %> 
